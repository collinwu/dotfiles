brew 'imagemagick'               # Tools and libraries to manipulate images in many formats
brew 'jq'                        # Lightweight and flexible command-line JSON processor
brew 'kubectl'                   # The Kubernetes command-line tool
brew 'mas'                       # CLI for Mac App Store
brew 'neovim'                    # Ambitious Vim-fork focused on extensibility and agility
brew 'solidity'                  # Contract-oriented programming language
brew 'stow'                      # Dotfiles linker
brew 'tldr'                      # Simplified and community-driven man pages
brew 'tree'                      # Display directories as trees
brew 'wget'                      # Internet file retriever
brew 'wordnet'                   # Lexical database for the English language
brew 'yarn'                      # Yarn is a JS package manager that doubles down as project manager
brew 'youtube-dl'                # Download YouTube videos from the command-line
brew 'zsh-syntax-highlighting'   # Fish shell like syntax highlighting for zsh

